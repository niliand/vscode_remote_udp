{
  "name": "udp-fs-provider",
  "displayName": "Remote - UDP FS Provider",
  "description": "Open any folder on a remote machine using UDP based filesystem provider",
  "version": "0.0.4",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onFileSystem:udpfs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "filesystemProviders": [
      {
        "scheme": "udpfs",
        "displayName": "UDP Remote File System"
      }
    ],
    "commands": [
      {
        "command": "udpfs.openFile",
        "title": "Open UDP FS File"
      },
      {
        "command": "udpfs.openRootFolder",
        "title": "Open UDP FS Folder"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "UDP FS Configuration",
      "properties": {
        "udpfs.hostname": {
          "type": "string",
          "default": "localhost",
          "description": "UDP FS server hostname"
        },
        "udpfs.key": {
          "type": "string",
          "default": null,
          "description": "Encryption key (hex or base64)"
        }
      }
    },
    "remoteExplorer": {
      "filesystems": [
        {
          "scheme": "udpfs",
          "label": "UDPFS"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.100.0",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niliand/vscode_remote_udp.git"
  },
  "publisher": "niliand" 
}